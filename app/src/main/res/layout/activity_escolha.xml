<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Escolha">
    <Button
        android:id="@+id/angry_btn"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#F4FFFC"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Sou profissional \ne procuro por novas vagas"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/angry_btn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/angry_btn1"

        android:layout_width="300dp"
        android:layout_height="120dp"

        android:layout_marginTop="250dp"
        android:layout_marginBottom="63dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#F4FFFC"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Sou cliente \ne busco por um serviço"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/angry_btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/angry_btn2"

        android:layout_width="300dp"
        android:layout_height="120dp"

        android:layout_marginTop="430dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#F4FFFC"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Divulgar uma vaga ou serviço"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>